# ==================== Django配置 ====================
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ==================== 数据库配置 ====================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=ai_story
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# ==================== Redis配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==================== Celery配置 ====================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==================== CORS配置 ====================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==================== LLM API配置 ====================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Gemini
GOOGLE_API_KEY=your-google-api-key

# ==================== LLM参数配置 ====================
# 文案改写阶段
LLM_REWRITE_MAX_TOKENS=2000
LLM_REWRITE_TEMPERATURE=0.7
LLM_REWRITE_TOP_P=0.9
LLM_REWRITE_MAX_INPUT=10000
LLM_REWRITE_MIN_INPUT=10

# 分镜生成阶段
LLM_STORYBOARD_MAX_TOKENS=4000
LLM_STORYBOARD_TEMPERATURE=0.8
LLM_STORYBOARD_TOP_P=0.95
LLM_STORYBOARD_MAX_INPUT=5000
LLM_STORYBOARD_MIN_INPUT=50

# 运镜生成阶段
LLM_CAMERA_MAX_TOKENS=3000
LLM_CAMERA_TEMPERATURE=0.6
LLM_CAMERA_TOP_P=0.9
LLM_CAMERA_MAX_INPUT=8000
LLM_CAMERA_MIN_INPUT=50

# ==================== LLM重试与超时配置 ====================
LLM_MAX_RETRIES=3
LLM_TIMEOUT=60
LLM_RETRY_DELAY=2
LLM_BACKOFF_FACTOR=2.0

# ==================== LLM速率限制配置 ====================
LLM_RATE_LIMIT_PER_MINUTE=60
LLM_RATE_LIMIT_PER_DAY=10000

# ==================== LLM缓存配置 ====================
LLM_ENABLE_CACHE=true
LLM_CACHE_TTL=86400
LLM_CACHE_KEY_PREFIX=llm:response:

# ==================== LLM日志配置 ====================
LLM_VERBOSE_LOGGING=false
LLM_LOG_CONTENT=false

# ==================== 文件存储配置 ====================
# 本地存储
MEDIA_ROOT=/path/to/media
STATIC_ROOT=/path/to/static

# AWS S3（可选）
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# ==================== TTS配置 ====================
TTS_PROVIDER=edge_tts
TTS_VOICE=zh-CN-XiaoxiaoNeural
TTS_RATE=+0%
TTS_VOLUME=+0%

# ==================== STT配置 ====================
STT_PROVIDER=whisper
WHISPER_MODEL=base

# ==================== 监控配置 ====================
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FILE=/path/to/logs/ai_story.log

# ==================== 其他配置 ====================
# 时区
TIME_ZONE=Asia/Shanghai

# 语言
LANGUAGE_CODE=zh-hans

# 最大上传文件大小（MB）
MAX_UPLOAD_SIZE=100
